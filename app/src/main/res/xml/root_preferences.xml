<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="@string/connection_header">

        <EditTextPreference
            app:key="esphomeapiurl"
            app:title="@string/esphomeapiurl_title"
            app:useSimpleSummaryProvider="true"
            />

        <EditTextPreference
            app:key="esphomeapipassword"
            app:title="@string/esphomeapipassword_title"
            app:useSimpleSummaryProvider="true"
            />


    </PreferenceCategory>

    <PreferenceCategory app:title="Cockpit">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/rotation_entries"
            android:entryValues="@array/rotation_values"
            android:key="cam_rotation"
            android:title="Rotation of the camera image" />
    </PreferenceCategory>
</PreferenceScreen>